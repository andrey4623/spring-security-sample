<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.andrey4623.users.model.User" table="users" catalog="elar">

        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>

        <property name="username" type="string">
            <column name="login" length="45" />
        </property>

        <property name="password" type="string">
            <column name="password" length="60" not-null="true" />
        </property>

        <set name="userRole" table="user_roles" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="user_id" not-null="true" />
            </key>
            <one-to-many class="com.andrey4623.users.model.UserRole" />
        </set>

    </class>
</hibernate-mapping>
